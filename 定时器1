    <input id="stop" type="button" value="结束">
    <script>
        let oStart=document.getElementById('start')
        let oStop=document.getElementById('stop')
        let i=0;
        let timer
        oStart.onclick=()=>{
            timer=setInterval(()=>{
                console.log(++i)
                
            },1000)
        }
        oStop.onclick=()=>{
            clearInterval(timer)

        }
    </script>
